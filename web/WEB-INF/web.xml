<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--用户登录-->
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.sy.servlet.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <!--用户注册-->
    <servlet>
        <servlet-name>UserRegServlet</servlet-name>
        <servlet-class>com.sy.servlet.UserRegServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegServlet</servlet-name>
        <url-pattern>/reg.do</url-pattern>
    </servlet-mapping>
    <!--订单列表-->
    <servlet>
        <servlet-name>OrdersListServlet</servlet-name>
        <servlet-class>com.sy.servlet.OrdersListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersListServlet</servlet-name>
        <url-pattern>/orderslist.do</url-pattern>
    </servlet-mapping>
    <!--订单删除-->
    <servlet>
        <servlet-name>OrdersDelServlet</servlet-name>
        <servlet-class>com.sy.servlet.OrdersDelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersDelServlet</servlet-name>
        <url-pattern>/ordersdel.do</url-pattern>
    </servlet-mapping>
    <!--订单更新-->
    <servlet>
        <servlet-name>OrdersUpdateServlet</servlet-name>
        <servlet-class>com.sy.servlet.OrdersUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersUpdateServlet</servlet-name>
        <url-pattern>/ordersupdate.do</url-pattern>
    </servlet-mapping>
    <!--订单详情-->
    <servlet>
        <servlet-name>OrdersInfoServlet</servlet-name>
        <servlet-class>com.sy.servlet.OrdersInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersInfoServlet</servlet-name>
        <url-pattern>/info.do</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>